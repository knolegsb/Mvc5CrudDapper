@model IEnumerable<Mvc5CrudDapper.Models.Employee>
@{
    ViewBag.Title = "GetAllEmployeeDetails";
}

<p>@Html.ActionLink("Add New Employee", "AddEmployee")</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.Id)
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItme => item.Address)
            </td>

            @Html.ActionLink("Edit", "EditEmployeeDetails", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.Id },
                    new { onclick = "return confirm('Are you sure like to delete?');" })
    </tr>
    }
</table>